{
  "manifest_version": 3,
  "name": "评论区批量黑名单工具",
  "version": "2.1",
  "permissions": ["cookies"],
  "host_permissions": ["*://*.bilibili.com/*", "*://api.bilibili.com/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
